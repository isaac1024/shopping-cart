<?xml version="1.0"?>
<psalm
        errorLevel="2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        findUnusedBaselineEntry="true"
        findUnusedCode="true"
>
    <projectFiles>
        <directory name="src" />
        <directory name="tests" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="src/Symfony" />
            <directory name="tests/Shared" />
            <file name="tests/bootstrap.php" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <UnusedClass errorLevel="error">
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </UnusedClass>
        <PropertyNotSetInConstructor errorLevel="error">
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </PropertyNotSetInConstructor>
        <InternalMethod errorLevel="error">
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </InternalMethod>
        <RedundantPropertyInitializationCheck errorLevel="error">
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </RedundantPropertyInitializationCheck>
        <PossiblyNullArgument errorLevel="error">
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </PossiblyNullArgument>
        <PossiblyNullReference errorLevel="error">
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </PossiblyNullReference>
    </issueHandlers>
</psalm>
<?xml version="1.0" encoding="utf-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="ShoppingCart\Cart\Domain\Cart" table="carts">
        <id name="cartId" column="id" type="cart_id" />
        <embedded name="numberItems" class="ShoppingCart\Cart\Domain\NumberItems" use-column-prefix="false" />
        <embedded name="totalAmount" class="ShoppingCart\Cart\Domain\TotalAmount" use-column-prefix="false" />
        <embedded name="productItems" class="ShoppingCart\Cart\Domain\ProductCollection" use-column-prefix="false" />
    </entity>
</doctrine-mapping>
